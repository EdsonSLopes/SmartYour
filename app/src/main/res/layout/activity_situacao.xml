<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SituacaoActivity"
    android:background="#d3d3d3">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="262dp"
        android:layout_height="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126"
        app:srcCompat="@drawable/celular_quebrou" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="244dp"
        android:layout_height="223dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783">

        <RadioButton
            android:id="@+id/radioQuebradoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Quebrado"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="20dp"
            />

        <RadioButton
            android:id="@+id/radioTrincadoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trincado"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioQueimadoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Queimado"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioOutrosId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outros"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="20dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="225dp"
        android:layout_height="61dp"
        android:text="Qual Defeito"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <Button
        android:id="@+id/btnSairSituaçãoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher_sair2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>